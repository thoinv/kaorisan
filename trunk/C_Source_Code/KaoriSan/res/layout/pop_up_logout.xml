<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_logout"
    android:layout_width="280dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:paddingTop="20dp"
        android:text="@string/txt_are_you_sure"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ec4289"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_logout_yes"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/pink_bg"
        android:text="@string/txt_yes"
        android:textColor="#fff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_logout_no"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/pink_bg"
        android:text="@string/txt_no"
        android:textColor="#fff"
        android:textSize="16sp" />

</FrameLayout>