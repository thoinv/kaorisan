<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/list_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:weightSum="100" >

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:ellipsize="end"
            android:gravity="top"
            android:lines="1"
            android:text="@string/title_task_item"
            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10sp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/numberOfResponse"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginRight="10sp"
                android:background="@drawable/gray_square"
                android:gravity="center"
                android:text="@string/number_replies_of_task"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/muiten" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtTaskStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:drawableLeft="@drawable/task_complete"
            android:drawablePadding="3dp"
            android:text="@string/complete"
            android:textSize="12sp" >

        </TextView>

        <TextView
            android:id="@+id/txtLastState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawablePadding="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="4dp"
            android:text="@string/time_last_state"
            android:textSize="12sp" >
        </TextView>
    </LinearLayout>
    

</LinearLayout>